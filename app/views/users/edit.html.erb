<h1>Edit user</h1>
<% if @user.errors.any? %>
	<ul>
	<% @user.errors.full_messages.each do |e| %>
		<li><%= e %></li>
	<% end %>
	</ul>
<% end %> 

<%= form_for(@user) do |f| %>
	Email: <%= f.text_field :email %><br>
	Username: <%= f.text_field :username %><br>
	Password: <%= f.text_field :password %><br>
	<%= f.submit %>
<% end %>